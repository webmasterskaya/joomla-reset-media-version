    </languages>

    <!-- Plugin files -->
    <files>
        <folder plugin="resetmediaversion">services</folder>
        <folder>src</folder>
    </files>

    <!-- Media files -->
    <media destination="plg_quickicon_resetmediaversion" folder="media">
        <folder>js</folder>
    </media>

    <!-- Update servers -->
    <updateservers>
        <server type="extension" priority="1" name="resetmediaversion">
            https://webmasterskaya.xyz/updates?element=joomla-reset-media-version
        </server>
    </updateservers>
