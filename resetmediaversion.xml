    <description>PLG_QUICKICON_RESETMEDIAVERSION_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Plugin\Quickicon\ResetMediaVersion</namespace>

    <!-- Scripts to run on installation -->
    <scriptfile>script.php</scriptfile>

    <!-- Language files -->
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_quickicon_resetmediaversion.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_quickicon_resetmediaversion.sys.ini</language>
